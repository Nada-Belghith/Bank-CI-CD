        <!-- Test de la liste des clients (API JSON) -->
        <HTTPSamplerProxy guiclass="HttpTestSampleGui" testclass="HTTPSamplerProxy" testname="GET /clients/all-json (API)" enabled="true">
          <elementProp name="HTTPsampler.Arguments" elementType="Arguments">
