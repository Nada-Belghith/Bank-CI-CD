        <HTTPSamplerProxy guiclass="HttpTestSampleGui" testclass="HTTPSamplerProxy" testname="GET /comptes/search?cin=${__P(cin,12345678)}" enabled="true">
          <elementProp name="HTTPsampler.Arguments" elementType="Arguments">
